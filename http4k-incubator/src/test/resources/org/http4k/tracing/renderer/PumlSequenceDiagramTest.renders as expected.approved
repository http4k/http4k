@startuml
title foobar
participant "user 1"
participant "user 2"
participant "system.b"
participant "system-c"
participant "system/d"
participant "events"
database "db"
participant "external"
"user 1" -> "system.b": init 1 req
activate "system.b"
"user 1" -> "events": event a
"system.b" -> "system-c": b-to-c req
activate "system-c"
"system.b" <-> "db": bidi-b req-resp
"system-c" -> "external": c-to-external req
activate "external"

"external" -[#DarkGreen]-> "system-c": 200 c-to-external
deactivate "external"
"system-c" -[#DarkBlue]-> "system.b": 300 b-to-c
deactivate "system-c"
"system.b" X-[#DarkOrange]-> "user 1": 400 init 2
deactivate "system.b"
"user 2" -> "system/d": init 2 req
activate "system/d"
"system/d" -> "events": event d
"system/d" X-[#FireBrick]-> "user 2": 500 init 2
deactivate "system/d"
@enduml