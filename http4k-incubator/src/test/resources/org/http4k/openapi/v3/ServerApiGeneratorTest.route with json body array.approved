package testPackage.server.endpoints

import java.math.BigDecimal
import kotlin.collections.List
import org.http4k.core.Body
import org.http4k.core.Method
import org.http4k.core.Request
import org.http4k.core.Response
import org.http4k.core.Status
import org.http4k.format.Jackson.auto
import org.http4k.routing.RoutingHttpHandler
import org.http4k.routing.bind

fun Endpoint(): RoutingHttpHandler {

	val endpointJsonRequestLens = Body.auto<List<BigDecimal>>().toLens()

	return "/jsonbody" bind Method.POST to { req: Request ->
		val endpointJsonRequest = endpointJsonRequestLens(req)
		Response(Status.OK)

	}
}

